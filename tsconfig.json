{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "~components/*": ["components/*"],
      "~constants": ["constants"],
      "~elements/*": ["elements/*"],
      "~lib/*": ["lib/*"],
      "~pages/*": ["pages/*"],
      "~services": ["services"],
      "~styles/*": ["styles/*"],
      "~types": ["types"],
      "~utils": ["utils"],
      "~views/*": ["views/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}